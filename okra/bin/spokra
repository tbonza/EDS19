#! /usr/bin/env python

""" Spokra is a command line utility for launching Okra Spark Applications. """

import argparse
import logging

from pyspark.sql import SparkSession

from okra.logging_utils import enable_cloud_log

logger = logging.getLogger(__name__)
parser = argparse.ArgumentParser()
parser.add_argument("jobname", help="Name of Spark Okra job to run")
parser.add_argument("--jobparams", help="Any required params for Spark job")

args = parser.parse_args()


enable_cloud_log()

if args.jobname:
    spark = SparkSession.builder.master("local")\
                                .appName("Intro").getOrCreate()

# Return help menu otherwise

else:
    parser.print_help()




